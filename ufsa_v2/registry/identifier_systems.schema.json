{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ufsa.org/v2/schemas/identifier_systems.schema.json",
  "title": "Identifier Systems Registry",
  "type": "object",
  "properties": {
    "systems": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": {"type": "string", "minLength": 1},
          "name": {"type": "string", "minLength": 1},
          "authority": {"type": "string"},
          "uri": {"type": "string"},
          "description": {"type": "string"}
        },
        "additionalProperties": true
      }
    }
  },
  "required": ["systems"],
  "additionalProperties": false
}
